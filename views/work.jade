extends layout

block content

  div.bg-corner-darkener.gradient.radial-gradient.tmg-trans-67

  div.container
    div.row.page-work-nav
      div.col-lg-12

        ul.nav.navbar-nav.pull-left
          a(href="#*")
            img.navbar-category-icon(src="#{tmg_cdn}/img/misc/category-grid-white.png",onMouseOver="this.src='#{tmg_cdn}/img/misc/category-grid-red.png?v=#{app_version}'",onMouseOut="this.src='#{tmg_cdn}/img/misc/category-grid-white.png?v=#{app_version}'")
          li.pull-left
            a(class="filter-featured",href="#featured")
              | FEATURED
          li.pull-left
            a(class="filter-reels",href="#reels")
              | TMG REELS
          li.pull-left
            a(class="filter-media",href="#media")
              | MEDIA
          li.pull-left
            a(class="filter-events",href="#events")
              | EVENTS
          li.pull-left(style="border-right:none")
            a(class="filter-design",href="#design")
              | DESIGN

    div.row.page-work
      div.col-lg-12
      
        for v,i in data["work"]
          a(href="work/#{v['id']}")
            div(class="video-browser-box #{v['categories'].join(' ')}")
              div.browser-box-bg
              if (v['image_menu'].length > 0)
                img.video-thmb(src="#{tmg_static_cdn}/video/#{v['id']}/#{v['image_menu']}.jpg?v=#{app_version}")
              else
                img.video-thmb(src="#{tmg_cdn}/img/misc/video-thmb-bg.png")
              div.meta
                p
                  | <span class="red">TITLE:</span> <span class="value">#{v["title"]}</span>
                if (!v['hide_client_on_menu'])
                  p
                    | <span class="red">CLIENT:</span> <span class="value">#{v["client_menu"]}</span>
              p.one-liner
                | #{v["one_liner"]}
              