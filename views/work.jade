extends layout

block content

  div.bg-corner-darkener.gradient.radial-gradient.tmg-trans-67

  div.container
    div.row.page-work-nav
      div.col-lg-12

        ul.nav.navbar-nav.pull-left

          img.navbar-category-icon(src="#{tmg_cdn}/img/misc/category-grid-white.png")
          li.pull-left
            a(class="filter-featured",href="#featured",onClick="TMG.incrementFooterRule()")
              | FEATURED
          li.pull-left
            a(class="filter-reels",href="#reels",onClick="TMG.incrementFooterRule()")
              | TMG REELS
          li.pull-left
            a(class="filter-media",href="#media",onClick="TMG.incrementFooterRule()")
              | MEDIA
          li.pull-left
            a(class="filter-events",href="#events",onClick="TMG.incrementFooterRule()")
              | EVENTS
          li.pull-left
            a(class="filter-design",href="#design",onClick="TMG.incrementFooterRule()")
              | DESIGN
          li.pull-left
            a(class="filter-all",href="#*",onClick="TMG.incrementFooterRule()")
              | ALL WORK

          li.pull-left(style="border-right:none")
            a(onClick="TMG.fn.workSearch(true)")
              label.work-search-label(for="work-search")
                | SEARCH
                i.fa.fa-search(style="padding-left:8px;")
          li.pull-left(style="border-right:none")
            input.tmg-trans-0.work-search(type="text",name="work-search",id="work-search")

    div.row.page-work
      div.col-lg-12
      
        for v,i in data["work"]
          a(href="work/#{v['id']}")
            div(class="video-browser-box #{v['categories'].join(' ')}")
              div.browser-box-bg
              if (v['image_menu'].length > 0)
                img.video-thmb(src="#{tmg_static_cdn}/video/#{v['id']}/#{v['image_menu']}.jpg?v=#{app_version}")
              else
                img.video-thmb(src="#{tmg_cdn}/img/misc/video-thmb-bg.png")
              div.meta
                p
                  | <span class="red">TITLE:</span> <span class="value">#{v["title"]}</span>
                if (!v['hide_client_on_menu'])
                  p
                    | <span class="red">CLIENT:</span> <span class="value">#{v["client_menu"]}</span>
              p.one-liner
                | #{v["one_liner"]}
              